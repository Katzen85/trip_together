<div class="container mt-3">
    <h1>Trip Calendar</h1>

    <div class="section mt-3">
        <h2>Events</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Day</th>
                    <th scope="col">Event</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                </tr>
            </thead>
            <tbody>
                <% @events.each do |event| %>
                <tr>
                    <th scope="row"><%= DateTime.parse(event["start"]["dateTime"]).strftime('%d %b %Y') %></th>
                    <td><%=event["summary"]%></td>
                    <td><%=DateTime.parse(event["start"]["dateTime"]).strftime('%I:%M %p')%></td>
                    <td><%=DateTime.parse(event["end"]["dateTime"]).strftime('%I:%M %p')%></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>